# IMAP

set imap_user = albert@acervin.com
set folder = imaps://albert@acervin.com@imap.googlemail.com/
set imap_check_subscribed

#SMTP

set smtp_url=smtps://$imap_user@smtp.googlemail.com
set from = albert@acervin.com
unset record

# Connection options
set ssl_force_tls = yes
unset ssl_starttls

account-hook imaps://albert@acervin.com@imap.googlemail.com/ 'set imap_user=albert@acervin.com'
